.footer
    bottom: 0
    padding: 15px 0
    border-top: 1px solid #e7e7e7
    font-weight: 300
    line-height: 1.5em
    &__container
        display: flex
        align-items: center
        margin-left: auto
        padding-left: 15px
        margin-right: auto
        padding-right: 15px
    &__left
        float: left !important
        display: block
    &__right
        padding: 0 15px
        margin: 0
        margin-left: auto
        font-size: 14px
        float: right !important
    &__list
        margin-bottom: 0
        padding: 0
        margin-top: 0
    &__copy
        color: #000
        text-decoration: none
        background-color: transparent
    &_block
        color: #000
        padding: 0 15px
        text-decoration: none
        background-color: transparent
        color: inherit
        text-transform: uppercase
        border-radius: 3px
        text-decoration: none
        position: relative
        display: block
        font-weight: 500
        font-size: 12px
    &_inline-block
        display: inline-block
        padding: 0px
        width: auto
    ul
        display: flex
        li
            padding: 0
