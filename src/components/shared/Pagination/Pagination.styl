@import "../styles/variables.styl"

.pagination
    display: flex
    margin-left: auto
    padding: 8px
    &__first, &__prev, &__next, &__last 
        min-width: 36px
        cursor: pointer
        border: none
        font-size: 18px
        color: $color-dark-active
        margin-right: 8px
        width: auto
        display: block
        max-height: 44px
        transition: all 300ms linear
        font-weight: 300
        border-radius: 3px
        position: relative
        &_disabled
            color: $color-dark-disabled
            cursor: default
    &__indicator
        margin: 0 12px 0 4px
        font-size: 18px
