@import "../../styles/variables.styl"

.ReactModal__Content
    outline: none

.modal
    &__overlay
        position: fixed
        background: rgba(34,34,85,0.63)
        width: 100%
        height: 100%
        top: 0
        left: 0
        z-index: 2000
        tansition: 300ms ease all
    &__content
        position: absolute
        width: 700px
        height: 300px
        top: 42%
        left: 50%
        right: auto
        bottom: auto
        margin-right: -50%
        transform: translate(-50%, -50%)
        &--nondesc
            height: 200px
            .card
                padding-top: 50px
        .card
            padding-top: 40px
            width: 100%
            height: 100%
    &__title
        margin: 0
        text-align: center
    &__close
        cursor: pointer
        position: absolute
        top: 10px
        right: 10px
    &__buttons
        margin-top: auto;
        padding-top: 30px;
        border-top: #aaa 1px solid;
        padding-bottom: 28px;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        button
            margin: 0 40px
            border: none
            width: 140px;
            width: auto;
            outline: none
            color: #fff;
            font-size: 16px;
            padding: 10px;
            min-width: 100px;
            cursor: pointer;
            max-height: 44px;
            font-weight: 300;
            border-radius: 3px;
            transition: all 300ms linear;
            background-color: $color-controls-accent !important;
            &.danger
                background-color: $color-danger !important;    
