@import "../../styles/variables.styl"

.sidebar
  .sidebar
    &__list
      color: #fff
      font-size: 14px
      line-height: 24px
      margin-top: 20px
      padding-left: 0
      padding-top: 0
      padding-bottom: 0
      margin-bottom: 0
      list-style: none
    &__item
      color: #ffffff
      display: block
      position: relative
      text-decoration: none
    &__item-link
      width: auto
      display: block
      max-height: 44px
      position: relative
      transition: all 300ms linear
      font-weight: 300
      border-radius: 3px
      margin: 10px 15px 0 !important
      border-radius: 3px
      position: relative
      display: block
      background-color: transparent
      &.active, &:hover
        background-color: $color-controls-accent !important
        box-shadow: $box-shadow-controls-accent
    &__item-icon
      color: #fff !important
      width: 24px
      height: 24px
      font-size: 24px
      float: left
      margin-right: 15px
      text-align: center
      vertical-align: middle
    &__item-text
      margin: 0
      font-size: 14px
      color: #FFFFFF

