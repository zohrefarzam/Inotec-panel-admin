@import "../../../../shared/styles/variables.styl"

.entity-item
  .card__footer
    display: flex
    justify-content: flex-start
    .right
      margin-left: auto
      button 
        margin-left: 20px
    button 
      width: auto;
      outline: none
      color: #fff;
      font-size: 16px;
      padding: 10px;
      min-width: 100px;
      cursor: pointer;
      max-height: 44px;
      font-weight: 300;
      border-radius: 3px;
      border: none
      transition: all 300ms linear;
      background-color: $color-controls-accent !important;
      &.delete
        background-color: $color-danger !important;    
