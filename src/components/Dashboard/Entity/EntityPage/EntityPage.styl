@import "../../../shared/styles/variables.styl"

.entity-page
    color: #fff
    .title
        margin: 0
        font-size: 18px
        margin-top: 0
        margin-bottom: 0
        cursor: default
    .subtitle
        min-height: auto
        font-weight: 300
        margin-bottom: 3px
        text-decoration: 'none'
        margin-top: 0
        margin-bottom: 3px
        cursor: default
    .search
        position: absolute
        top: 20px
        right: 14px
    &__body-wrapper
        padding: 20px
    .card__row
        display: flex
        justify-content: space-between
        align-items: center
        button 
            width: auto;
            margin-top: 16px 
            outline: none
            color: #fff;
            font-size: 16px;
            padding: 10px;
            min-width: 100px;
            cursor: pointer;
            max-height: 44px;
            font-weight: 300;
            border-radius: 3px;
            border: none
            transition: all 300ms linear;
            background-color: $color-controls-accent !important;
        .filters
            display: flex
            align-items: center
            justify-content: flex-end
            margin-top: 12px
